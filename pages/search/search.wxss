/*=================================头部======================================*/
.top{
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  -webkit-justify-content: center;
  align-items: center;
  -webkit-align-items: center;
}
.top > .searchBox{
  position: relative;
  display: inline-flex;
  display: -webkit-inline-flex;
}
.searchBox image{
  position: absolute;
  top: 11rpx;
  left: 30rpx;
  width: 43rpx;
  height: 43rpx;
  z-index: 10;
}
.searchBox textarea{
  margin-left: 14rpx;
  padding:18rpx 0 18rpx 70rpx;
  width: 628rpx;
  height: 66rpx;
  border-radius:20rpx;
  background: #f6f6f6;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  font-size: 26rpx;
}
.top{
  margin-top: 15rpx;
}
.top .cancelBtn{
  margin: 0 14rpx;
  padding: 0;
  width: 80rpx;
  display: inline-flex;
  display: -webkit-inline-flex;
  box-shadow: 0;
  background: none;
  color: rgba(53, 198, 250, 1);
  font-size: 28rpx;
  justify-content: center;
  -webkit-justify-content: center;
}
button::after{display:none}
/*=================================列表======================================*/
.list label{
  display: block;
  font-size: 28rpx;
  color: #969696;
  line-height: 50rpx;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  padding-left: 20rpx;
}
.hot{
  padding-left: 20rpx;
}
.hot .hotItem{
  padding: 5rpx 0;
  display: inline-flex;
  display: -webkit-inline-flex;
  width: 365rpx;
  font-size: 28rpx;
  color: #333;
}