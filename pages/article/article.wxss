/*=================================标题=====================================*/
.title{
  padding: 48rpx 33rpx;
  font-size: 44rpx;
  font-weight: bold;
  line-height: 54rpx;
  text-align: justify;
}
/*=================================文章相关==================================*/
.infor{
  padding: 0 33rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  -webkit-align-items: center;
  justify-content:space-between;
  -webkit-justify-content: space-between;
}

.infor > view{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  -webkit-align-items: center;
  justify-content: space-around;
  -webkit-justify-content: space-around;
}

.leftInfor image{
  width: 72rpx;
  height: 72rpx;
  border-radius: 10rpx;
  border: 1px solid #eee;
}
.textBox{
  margin-left: 15rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  -webkit-flex-direction: column;
  align-items: flex-start;
  -webkit-align-items: flex-start;
  justify-content: space-around;
  -webkit-justify-content: space-around;
}
.nameBox{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  -webkit-align-items: center;
  justify-content: space-around;
  -webkit-justify-content: space-around;
}
.nameBox .name{
  font-size: 26rpx;
}
.nameBox .tag{
  margin-left: 15rpx;
  display: inline-flex;
  display: -webkit-inline-flex;
  font-size: 16rpx;
  height: 30rpx;
  line-height: 30rpx;
  padding: 0 4rpx;
  border-radius: 7rpx;
  background: #f95a6c;
  color: #fff;
}
.date{
  margin-top:10rpx;
  font-size: 20rpx;
  color: #919191;
}

.rightFont{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  -webkit-align-items: center;
  justify-content: space-around;
  -webkit-justify-content: space-around;
}
.bigger,.smaller{
  margin-left:5rpx;
  display: inline-flex;
  display: -webkit-inline-flex;
  padding:0 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #fff;
  border: 1px solid #fff;
  border-radius:10rpx;
  background: #cfcfcf;
}
/*=================================内容=====================================*/
.content{
  padding: 0 33rpx;
}
.content text{
  display:block;
  text-align: justify;
  margin:26rpx 0;
  font-size: 32rpx;
  line-height: 54rpx;
}
/*=================================评论区====================================*/
.commentArea{
  margin:48rpx 30rpx 0;
  padding-bottom:50rpx;
  border-top: 1rpx solid #eee;
}
.hotTitle{
  margin-top: 30rpx;
  margin-bottom: 60rpx;
  display: inline-block;
  line-height: 30rpx;
  padding-left: 10rpx;
  font-size: 26rpx;
  border-left: 4rpx solid #f95a6c;
}

.commentItem{
  margin-bottom: 64rpx;
  display: flex;
  display: -webkit-flex;
}

.commentItem .Ctx{
  margin-right: 20rpx;
  margin-top: 10rpx;
  flex-shrink: 0;
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
}

.commentItem .top{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  -webkit-align-items: center;
  justify-content: space-between;
  -webkit-justify-content: space-between;
}
.Cname{
  display: inline-flex;
  display: -webkit-inline-flex;
  font-size: 26rpx;
  color: rgba(53, 198, 250, 1);
}
.Cgreat{
  display: inline-flex;
  display: -webkit-inline-flex;
  width: 28rpx;
  height: 28rpx;
}
.Cnumber{
  margin-left:14rpx;
  font-size: 24rpx;
  color: #999;
}
.Ccontent{
  font-size: 28rpx;
  color: #000;
  line-height: 34rpx;
  text-align: justify;
}
.Cdate{
  margin-top:10rpx;
  display: block;
  font-size: 20rpx;
  color: #999;
}
/*=================================底部栏===================================*/
.accessBottom{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  -webkit-align-items: center;
  justify-content: center;
  -webkit-justify-content: center;
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  height: 90rpx;
  border-top: 1px solid #dbdbdb;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  background: #fff;
}

.access{
  position: relative;
  display:flex;
  display: -webkit-flex;
  align-items: center;
  -webkit-align-items: center;
  justify-content: center;
  width: 430rpx;
}
