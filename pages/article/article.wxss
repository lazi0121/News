} */
.access textarea{
  padding:15rpx 0 15rpx 15rpx;
  width: 420rpx;
  height: 66rpx;
  border-radius:20rpx;
  border: 1rpx solid #dbdbdb;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  font-size: 26rpx;
}
.accessItem{
  display:flex;
  display: -webkit-flex;
  align-items: center;
  -webkit-align-items: center;
  justify-content: center;
  -webkit-justify-content: center;
  width:80rpx;
  height: 90rpx;
}
.comment{
  position: relative;
}
.comment image{
  width: 45rpx;
  height: 39rpx;
}
.comment label{
  position: absolute;
  top:25rpx;
  right:0rpx;
  padding: 0 10rpx;
  height: 20rpx;
  line-height: 20rpx;
  font-size: 14rpx;
  color: #fff;
  background: #f95a6c;
  border-radius:10rpx;
}
.star image{
  width: 45rpx;
  height: 43rpx;
}
.share image{
  width: 42rpx;
  height: 49rpx;
}
.circle image{
  width: 42rpx;
  height: 42rpx;
}